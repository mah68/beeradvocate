<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/beeradvocatelogo"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:contentDescription="Logo"
                android:src="@drawable/beeradvocate_logo_header" />

            <Button
                android:id="@+id/searchButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mag_glass" />
        </RelativeLayout>

        <TextView
            android:id="@+id/beerNameTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Beer Name"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/breweryTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="- Brewery Name"
            android:textColor="#666666"
            android:textSize="18dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:background="#000000" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="5dp" >

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="0.5"
                    android:background="#DDDDDD"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/beerpic"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="Beer Picture"
                        android:src="@drawable/no_beer_pic" />
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="0.5"
                    android:background="#BBBBBB"
                    android:orientation="vertical"
                    android:padding="7dp" >

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:padding="2dp" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".4"
                            android:gravity="center"
                            android:text="BA SCORE"
                            android:textColor="#000000"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/baScoreTextView"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".4"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="#E41B17"
                            android:textStyle="bold"
                            android:textSize="38dp" />

                        <TextView
                            android:id="@+id/baClass"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".4"
                            android:gravity="center"
                            android:text="not found"
                            android:textColor="#222222"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#DDDDDD"
                        android:orientation="vertical"
                        android:padding="2dp" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".4"
                            android:gravity="center"
                            android:text="THE BROS"
                            android:textColor="#000000"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/broScoreTextView"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".4"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="#E41B17"
                            android:textStyle="bold"
                            android:textSize="38dp" />

                        <TextView
                            android:id="@+id/broClass"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".4"
                            android:gravity="center"
                            android:text="not found"
                            android:textColor="#222222"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ratingStatsTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".2"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="No stats found"
                        android:textColor="#000000"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="left"
                    android:text="Brewed By:"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/breweryLowerTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="left"
                    android:text="Brewery Not Found"
                    android:textColor="#000000"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="left"
                    android:text="Style  |  ABV"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/styleABVTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="left"
                    android:text="Style not found  |  0.0% ABV"
                    android:textColor="#000000"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="left"
                    android:text="Availability:"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/availabilityTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="left"
                    android:text="unknown"
                    android:textColor="#000000"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="left"
                    android:text="Notes:"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notesTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="left"
                    android:text="No notes"
                    android:textColor="#000000"
                    android:textSize="17dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>